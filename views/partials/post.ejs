<div class="glass-post-card">
  <div class="d-flex justify-content-between align-items-center">
    <span class="post-title"><%= posts[i].title %></span>
    <div class="post-actions">
      <!-- ðŸ”¥ CRITICAL: Only show buttons if user owns the post -->
      <% if (posts[i].owner === locals.fname) { %>
        <a href="/edit/<%= i %>" class="btn btn-sm btn-outline-light">Edit</a>
        <form method="POST" action="/delete/<%= i %>" style="display: inline;" onsubmit="return confirm('Delete this post?')">
          <button type="submit" class="btn btn-sm btn-danger" title="Delete Post">
              <i class="bi bi-trash"></i>
          </button>
        </form>
      <% } %>
    </div>
  </div>
  <div class="post-meta">
    By <%= posts[i].author || 'Anonymous' %> â€¢ <%= posts[i].time || 'Recently' %>
  </div>
  <div class="post-content mb-2">
    <%= posts[i].content.length > 200 ? posts[i].content.substring(0, 200) + '...' : posts[i].content %>
  </div>
</div>
