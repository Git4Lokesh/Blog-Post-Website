<div class="glass-post-card">
  <div class="d-flex justify-content-between align-items-center">
    <span class="post-title"><%= posts[index].title %></span>
    <div class="post-actions">
      <a href="/edit/<%= index %>" class="btn btn-sm btn-outline-light">Edit</a>
      <form method="POST" action="/delete/<%= index %>" style="display: inline;" onsubmit="return confirm('Delete this post?')">
        <button type="submit" class="btn btn-sm btn-danger" title="Delete Post">
            <i class="bi bi-trash"></i>
        </button>
      </form>
    </div>
  </div>
  <div class="post-meta">
    By <%= posts[index].author || 'Anonymous' %>                   â€¢                     <%= posts[index].time || 'Recently' %>
  </div>
  <div class="post-content mb-2">
    <%= posts[index].content.length > 200 ? posts[index].content.substring(0, 200) + '...' : posts[index].content %>
  </div>
</div>
 